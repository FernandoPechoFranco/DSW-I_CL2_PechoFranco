@model DSW_I_CL2_PechoFranco.Models.CD

@{
    ViewData["Title"] = "Agregar Nuevo CD";
}

<h1>Agregar Nuevo CD</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Artista</label>
        <input asp-for="Artista" class="form-control" />
        <span asp-validation-for="Artista" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Género</label>
        <input asp-for="Genero" class="form-control" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
